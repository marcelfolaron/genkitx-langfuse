{
  "name": "genkit-langfuse",
  "description": "Genkit AI framework plugin for Langfuse observability and tracing.",
  "keywords": [
    "genkit",
    "genkit-plugin",
    "genkit-telemetry",
    "langfuse",
    "observability",
    "tracing",
    "ai",
    "genai",
    "generative-ai"
  ],
  "version": "0.1.0",
  "type": "commonjs",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "check": "tsc",
    "compile": "tsup-node",
    "build:clean": "rimraf ./lib",
    "build": "npm-run-all build:clean check compile",
    "build:watch": "tsup-node --watch",
    "test": "node node_modules/jest/bin/jest --runInBand --verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelfolaron/genkitx-langfuse.git"
  },
  "homepage": "https://github.com/marcelfolaron/genkitx-langfuse",
  "bugs": {
    "url": "https://github.com/marcelfolaron/genkitx-langfuse/issues"
  },
  "author": "Marcel Folaron",
  "license": "Apache-2.0",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "~1.25.0",
    "@opentelemetry/resources": "~1.25.0",
    "@opentelemetry/sdk-trace-base": "~1.25.0",
    "langfuse": "^3.28.0"
  },
  "peerDependencies": {
    "genkit": "^1.16.1"
  },
  "devDependencies": {
    "@genkit-ai/ai": "^1.16.1",
    "@genkit-ai/googleai": "^1.16.1",
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.11.16",
    "genkit": "^1.16.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "openai": "^4.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^4.9.0",
    "zod": "^3.25.76"
  },
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  }
}
